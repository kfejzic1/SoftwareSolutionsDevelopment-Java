                 <TableColumn id="colGradId" maxWidth="-1.0" minWidth="50.0" prefWidth="-1.0" text="ID" />
                 <TableColumn id="colGradNaziv" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Naziv" />
                   <TableColumn id="colGradStanovnika" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Stanovnika" />
                   <TableColumn id="colGradDrzava" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" text="Država" />
               </columns>
             </TableView>
   </children>
</GridPane>
